<Window x:Class="NuGetTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuGetTool"
        mc:Ignorable="d"
        Title="NuGet Tool" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Mode Selector -->
            <RowDefinition Height="Auto"/> <!-- Common Metadata -->
            <RowDefinition Height="*"/>    <!-- File List -->
            <RowDefinition Height="Auto"/> <!-- Action Buttons -->
            <RowDefinition Height="150"/>  <!-- Log -->
        </Grid.RowDefinitions>

        <!-- Mode Selection -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <RadioButton Name="rbCsproj" Content="C# Project Mode" IsChecked="True" Checked="Mode_Checked"/>
            <RadioButton Name="rbNuspec" Content="Nuspec Mode" IsChecked="False" Checked="Mode_Checked" Margin="0,0,10,0"/>
            
        </StackPanel>

        <!-- Metadata Grid -->
        <GroupBox Header="Package Metadata" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Package ID:" Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="txtPackageId" Grid.Row="0" Grid.Column="1" Margin="2"/>

                <Label Content="Version:" Grid.Row="0" Grid.Column="2"/>
                <TextBox Name="txtVersion" Grid.Row="0" Grid.Column="3" Margin="2"/>

                <Label Content="Authors:" Grid.Row="1" Grid.Column="0"/>
                <TextBox Name="txtAuthors" Grid.Row="1" Grid.Column="1" Margin="2"/>

                <Label Content="Description:" Grid.Row="2" Grid.Column="0"/>
                <TextBox Name="txtDescription" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="2"/>
            </Grid>
        </GroupBox>

        <!-- Files List -->
        <DockPanel Grid.Row="2" LastChildFill="True" Margin="0,0,0,10">
            <Label Content="Content Files:" DockPanel.Dock="Top"/>
            <StackPanel DockPanel.Dock="Right" Margin="5,0,0,0">
                <Button Name="btnAddFile" Content="Add Files..." Click="BtnAddFile_Click" Padding="5,2" Margin="0,0,0,5"/>
                <Button Name="btnClearFiles" Content="Clear" Click="BtnClearFiles_Click" Padding="5,2"/>
            </StackPanel>
            <ListBox Name="lstFiles" Margin="0" AllowDrop="True" Drop="LstFiles_Drop"/>
        </DockPanel>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Name="btnGenerateNuspec" Content="Generate Nuspec" Margin="0,0,10,0" Padding="10,5" Click="BtnGenerateNuspec_Click"/>
            <Button Name="btnGenerateCsproj" Content="Generate CSPROJ" Margin="0,0,10,0" Padding="10,5" Click="BtnGenerateCsproj_Click" Visibility="Collapsed"/>
            <Button Name="btnBuild" Content="Build Package" Margin="0,0,10,0" Padding="10,5" Click="BtnBuild_Click"/>
            <Button Name="btnUpload" Content="Upload Package" Padding="10,5" Click="BtnUpload_Click"/>
        </StackPanel>

        <!-- Log / Test Block -->
        <GroupBox Grid.Row="4" Margin="0,5,0,0">
            <GroupBox.Header>
                <DockPanel>
                    <TextBlock Text="Console Output" FontWeight="Bold" Foreground="#333"/>
                    <Button Name="btnClearLog" Content="Clear" HorizontalAlignment="Right" Click="BtnClearLog_Click" Padding="10,0" Margin="10,0,0,0" Cursor="Hand"/>
                </DockPanel>
            </GroupBox.Header>
            <TextBox Name="txtLog" 
                     IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto" 
                     TextWrapping="Wrap" 
                     BorderThickness="1"
                     Background="Black" 
                     Foreground="#00FF00" 
                     FontFamily="Consolas" 
                     FontSize="12"
                     Padding="5"/>
        </GroupBox>
    </Grid>
</Window>
