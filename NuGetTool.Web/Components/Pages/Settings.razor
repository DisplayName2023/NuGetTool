@page "/settings"

<PageTitle>NuGet Tool - Settings</PageTitle>

<div class="container-fluid mt-4">
    <div class="premium-card">
        <h5 class="mb-4"><i class="bi bi-gear-fill me-2"></i>Application Settings</h5>
        
        <div class="form-group">
            <label>Default NuGet API Key</label>
            <input type="password" class="form-control-premium" placeholder="Enter your NuGet API key" />
            <small class="text-muted">Stored securely in your local environment.</small>
        </div>

        <div class="form-group">
            <label>Default Package Authors</label>
            <input type="text" class="form-control-premium" placeholder="Author Name" />
        </div>

        <div class="form-group">
            <label>Default NuGet Source</label>
            <input type="text" class="form-control-premium" value="https://api.nuget.org/v3/index.json" />
        </div>

        <div class="d-grid gap-2 mt-4">
            <button class="btn btn-primary-premium">Save Settings</button>
        </div>
    </div>
</div>
